
@model List<MVCWebapp.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>List of all products</h2>

<table class="table table-bordered table-striped table-hover">
    
    <tr>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Price of the product</th>
        <th>Product Quantity</th>
        <th>Product Image</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Edit","Product",new { @id = item.prod_id})" class="btn btn-warning">LOSA @item.prod_id</a>
            </td>
           <td>@item.prod_name</td>
            <td>@item.prod_price</td>
            <td>@item.prod_qty</td>
            <td>
                <img src="~/Content/Image/@item.prod_pic" alt="Alernate Text" width="100" height="100" />
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", "Product", new { @id = item.prod_id }, new { htmlAttribute = new { @class = "btn btn-warning" } })*@

                <a href="@Url.Action("Delete","Product",new { @id = item.prod_id})" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete @item.prod_name?')">Delete</a>

            </td>


        </tr>
            }
        

    </table>
<a href="@Url.Action("Create","Product")"  class="btn btn-primary"> Add New Product</a>